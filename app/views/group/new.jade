extends ../layouts/defualt

block title
   title 新建组 - #{pkg.name}

block content
   .row
      .col-md-6.col-md-offset-3
         .well.well-sm
            form.form-horizontal(action='/group', method='post')
               fieldset
                  legend.text-center 新建组
                  input.hidden(name='_csrf' value=csrf_token)
                  .form-group
                     label.col-md-3.control-label(for='name') 名称
                     .col-md-9
                        input#name.form-control(name='name', type='text', placeholder='组名称')
                  .form-group
                     label.col-md-3.control-label(for='description') 描述
                     .col-md-9
                        textarea#description.form-control(name='description', placeholder='请输入组的描述......', rows='5')
                  .form-group
                     .col-md-12.text-right
                        button#cancel.btn.btn-default(type='button') 取消
                        button.btn.btn-primary.btn-lg(type='submit') 新建

block foot-script
   script.
      require(['jquery'], function ($) {
         $(function () {
            $('#cancel').click(function () {
               if (history.length) {
                  history.back();
               } else {
                  window.close();
               }
            });
         });
      });

